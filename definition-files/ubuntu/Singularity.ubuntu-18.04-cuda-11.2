    export CUDA_GPG_PUBKEY='3bf863cc.pub'

    # Set NVIDIA driver and CUDA versions
    export NVIDIA_DRIVER_MAJOR='510'
    export NVIDIA_DRIVER_MINOR='39'
    export NVIDIA_DRIVER_REVISION='01'
